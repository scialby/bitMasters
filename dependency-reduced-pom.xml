<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.pizzagpt</groupId>
  <artifactId>pizzagpt</artifactId>
  <name>pizzagpt</name>
  <version>1.0-SNAPSHOT</version>
  <build>
    <resources>
      <resource>
        <directory>src/main/resources</directory>
      </resource>
    </resources>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.11.0</version>
        <configuration>
          <source>22</source>
          <target>22</target>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.5.1</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <transformers>
                <transformer>
                  <mainClass>com.pizzagpt.Main</mainClass>
                </transformer>
              </transformers>
              <filters>
                <filter>
                  <artifact>*:jackson-core</artifact>
                  <excludes>
                    <exclude>META-INF/LICENSE</exclude>
                    <exclude>META-INF/NOTICE</exclude>
                    <exclude>META-INF/versions/9/module-info</exclude>
                  </excludes>
                </filter>
                <filter>
                  <artifact>*:jackson-databind</artifact>
                  <excludes>
                    <exclude>META-INF/LICENSE</exclude>
                    <exclude>META-INF/NOTICE</exclude>
                    <exclude>META-INF/versions/9/module-info</exclude>
                  </excludes>
                </filter>
                <filter>
                  <artifact>*:jackson-annotations</artifact>
                  <excludes>
                    <exclude>META-INF/LICENSE</exclude>
                    <exclude>META-INF/NOTICE</exclude>
                  </excludes>
                </filter>
                <filter>
                  <artifact>*:javafx-controls</artifact>
                  <excludes>
                    <exclude>META-INF/substrate/config/reflectionconfig-aarch64-android.json</exclude>
                    <exclude>META-INF/substrate/config/reflectionconfig-arm64-ios.json</exclude>
                    <exclude>META-INF/substrate/config/reflectionconfig-x86_64-ios.json</exclude>
                    <exclude>META-INF/substrate/config/resourcebundles</exclude>
                  </excludes>
                </filter>
                <filter>
                  <artifact>*:javafx-base</artifact>
                  <excludes>
                    <exclude>META-INF/substrate/config/reflectionconfig-aarch64-android.json</exclude>
                    <exclude>META-INF/substrate/config/reflectionconfig-arm64-ios.json</exclude>
                    <exclude>META-INF/substrate/config/reflectionconfig-x86_64-ios.json</exclude>
                    <exclude>META-INF/substrate/config/resourcebundles</exclude>
                  </excludes>
                </filter>
                <filter>
                  <artifact>*:javafx-fxml</artifact>
                  <excludes>
                    <exclude>META-INF/substrate/config/reflectionconfig-aarch64-android.json</exclude>
                    <exclude>META-INF/substrate/config/reflectionconfig-arm64-ios.json</exclude>
                    <exclude>META-INF/substrate/config/reflectionconfig-x86_64-ios.json</exclude>
                    <exclude>META-INF/substrate/config/resourcebundles</exclude>
                  </excludes>
                </filter>
              </filters>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <dependencies>
    <dependency>
      <groupId>org.junit.jupiter</groupId>
      <artifactId>junit-jupiter-api</artifactId>
      <version>5.10.0</version>
      <scope>test</scope>
      <exclusions>
        <exclusion>
          <artifactId>opentest4j</artifactId>
          <groupId>org.opentest4j</groupId>
        </exclusion>
        <exclusion>
          <artifactId>junit-platform-commons</artifactId>
          <groupId>org.junit.platform</groupId>
        </exclusion>
        <exclusion>
          <artifactId>apiguardian-api</artifactId>
          <groupId>org.apiguardian</groupId>
        </exclusion>
      </exclusions>
    </dependency>
    <dependency>
      <groupId>org.junit.jupiter</groupId>
      <artifactId>junit-jupiter-engine</artifactId>
      <version>5.10.0</version>
      <scope>test</scope>
      <exclusions>
        <exclusion>
          <artifactId>junit-platform-engine</artifactId>
          <groupId>org.junit.platform</groupId>
        </exclusion>
        <exclusion>
          <artifactId>apiguardian-api</artifactId>
          <groupId>org.apiguardian</groupId>
        </exclusion>
      </exclusions>
    </dependency>
  </dependencies>
  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <javafx.version>22.0.2</javafx.version>
    <junit.version>5.10.0</junit.version>
  </properties>
</project>
