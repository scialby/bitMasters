<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="300.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pizzagpt.userSession.SessionController">
   <children>
      <VBox layoutX="24.0" layoutY="103.0">
         <children>
            <HBox>
               <children>
                  <Label text="Username" textAlignment="CENTER">
                     <font>
                        <Font name="System Italic" size="18.0" />
                     </font>
                  </Label>
                  <TextField fx:id="usernameField">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </TextField>
               </children>
            </HBox>
            <HBox>
               <children>
                  <Label text="Password" textAlignment="CENTER">
                     <font>
                        <Font name="System Italic" size="18.0" />
                     </font>
                  </Label>
                  <TextField fx:id="passwordField">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </TextField>
               </children>
            </HBox>
         </children>
      </VBox>
      <VBox layoutX="133.0" layoutY="198.0">
         <children>
            <Button fx:id="btnLogin" mnemonicParsing="false" onAction="#loginHandler" text="Login">
               <font>
                  <Font size="16.0" />
               </font>
                </Button>
            <Button fx:id="btnRegister" mnemonicParsing="false" onAction="#registerHandler" text="Register">
               <font>
                  <Font size="16.0" />
               </font>
            </Button>
         </children>
      </VBox>
      <Label layoutX="30.0" layoutY="29.0" prefHeight="49.0" prefWidth="241.0" text="BENVENUTO!" textAlignment="CENTER">
         <font>
            <Font name="Roboto Light" size="35.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
