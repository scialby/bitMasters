<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox id="SortinoMain" alignment="TOP_CENTER" prefHeight="600" prefWidth="800" spacing="20" style="-fx-background-color: linear-gradient(to bottom right, #518ec2, #28557a);" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pizzagpt.sortino.SortinoMain">
   <style>
      .level-card {
      -fx-background-color: rgba(255,255,255,0.95);
      -fx-background-radius: 20;
      -fx-padding: 25;
      -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 15, 0, 0, 5);
      }
      .level-card:hover {
      -fx-translate-y: -5px;
      -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.3), 20, 0, 0, 7);
      }
      .level-button {
      -fx-background-radius: 10;
      -fx-padding: 10 20;
      -fx-font-size: 16px;
      -fx-text-fill: white;
      -fx-font-weight: bold;
      -fx-cursor: hand;
      }
      .level-button:hover {
      -fx-scale-x: 1.05;
      -fx-scale-y: 1.05;
      -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 10, 0, 0, 3);
      }
      #beginnerBtn { -fx-background-color: #27ae60; }
      #intermediateBtn { -fx-background-color: #f1c40f; }
      #advancedBtn { -fx-background-color: #e74c3c; }

      /* Stili per la barra di progresso */
      .progress-rect {
      -fx-arc-width: 5;
      -fx-arc-height: 5;
      -fx-stroke-width: 2;
      }
      .progress-rect.completed {
      -fx-fill: #27ae60;
      -fx-stroke: #1e8449;
      }
      .progress-rect.incomplete {
      -fx-fill: #ecf0f1;
      -fx-stroke: #bdc3c7;
      }
      .progress-separator {
      -fx-text-fill: #7f8c8d;
      -fx-font-size: 24px;
      }
   </style>

   <!-- Header con titolo e reset -->
   <HBox alignment="CENTER" spacing="20" style="-fx-padding: 20;">
      <Label style="-fx-text-fill: white; -fx-font-size: 28px; -fx-font-weight: bold; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 10, 0.5, 0, 1);" text="Scegli il tuo livello" />
      <HBox alignment="CENTER_RIGHT" spacing="10">
         <Label fx:id="playerScoreLabel" style="-fx-text-fill: white; -fx-font-size: 16px;" text="Livello: 0" />
         <Button onMouseClicked="#handleResetPoints" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-background-radius: 15;" text="ðŸ”„ Resetta" />
      </HBox>
   </HBox>

   <!-- Contenuto principale: 3 livelli -->
   <VBox alignment="CENTER" spacing="30" style="-fx-padding: 0 50;">
      <!-- Livello Principiante -->
      <VBox alignment="CENTER" prefHeight="80.0" prefWidth="200.0" spacing="10" styleClass="level-card">
         <Label style="-fx-text-fill: #2c3e50; -fx-font-size: 24px; -fx-font-weight: bold;" text="Principiante ðŸŒ±" />
         <Button id="beginnerBtn" fx:id="ex1_1" styleClass="level-button" text="Inizia la sfida âž”" />
         <!-- Barra di progresso per Principiante -->
         <HBox fx:id="progressBar1" alignment="CENTER" prefHeight="20.0" prefWidth="273.0" spacing="5" style="-fx-padding: 10;">
         </HBox>
      </VBox>

      <!-- Livello Intermedio -->
      <VBox alignment="CENTER" spacing="10" styleClass="level-card">
         <Label style="-fx-text-fill: #2c3e50; -fx-font-size: 24px; -fx-font-weight: bold;" text="Intermedio ðŸš€" />
         <Button id="intermediateBtn" fx:id="ex2_1" styleClass="level-button" text="Inizia la sfida âž”" />
         <!-- Barra di progresso per Intermedio -->
         <HBox fx:id="progressBar2" alignment="CENTER" spacing="5" style="-fx-padding: 10;">
         </HBox>
      </VBox>

      <!-- Livello Avanzato -->
      <VBox alignment="CENTER" spacing="10" styleClass="level-card">
         <Label style="-fx-text-fill: #2c3e50; -fx-font-size: 24px; -fx-font-weight: bold;" text="Avanzato ðŸ”¥" />
         <Button id="advancedBtn" fx:id="ex3_1" styleClass="level-button" text="Inizia la sfida âž”" />
         <!-- Barra di progresso per Avanzato -->
         <HBox fx:id="progressBar3" alignment="CENTER" spacing="5" style="-fx-padding: 10;">
         </HBox>
      </VBox>
   </VBox>

   <!-- Footer con pulsanti per tornare al menÃ¹ e logout -->
   <HBox alignment="CENTER" prefHeight="270.0" prefWidth="800.0" spacing="75.0" styleClass="footer">
      <children>
         <Button mnemonicParsing="false" onAction="#toMainMenu" prefHeight="50.0" prefWidth="200.0" styleClass="btn-red" text="Torna al menÃ¹" textFill="RED">
            <font>
               <Font name="System Bold" size="20.0" />
            </font>
         </Button>
      </children>
   </HBox>
</VBox>
